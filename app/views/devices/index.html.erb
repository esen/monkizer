<p id="notice"><%= notice %></p>

<h2>Listing Devices</h2>

<table class="pure-table">
  <thead>
    <tr>
      <th>Model</th>
      <th>Version</th>
      <th>Adb device</th>
      <th>Project</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @devices.each do |device| %>
      <tr>
        <td><%= device.model %></td>
        <td><%= device.version %></td>
        <td><%= device.adb_device_id %></td>
        <td><%= device.project_id %></td>
        <td><%= link_to 'Show', [@project, device] %></td>
        <td><%= link_to 'Edit', edit_project_device_path(@project, device) %></td>
        <td><%= link_to 'Destroy', [@project, device], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Device', new_project_device_path(@project), class: "pure-button" %>
